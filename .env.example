PORT=3000
NODE_ENV=development

# Database Configuration (Optional - for database-backed configuration)
# Simply set DB_URL to enable database mode (auto-detected)
# DB_URL=postgresql://mcphub:password@localhost:5432/mcphub
# Or explicitly control with USE_DB (overrides auto-detection)
# USE_DB=true
# Server Configuration
NODE_ENV=production
PORT=80
BASE_PATH=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://mcphub:mcphub_password@localhost:5432/mcphub?schema=public

# OpenAI Configuration (Required for Smart Routing)
OPENAI_API_KEY=your-openai-api-key

# Optional: Custom OpenAI-compatible API
# OPENAI_API_BASE=https://api.openai.com/v1

# Optional: Debug Mode
# DEBUG=false

# Optional: CORS Configuration
# CORS_ORIGIN=http://localhost:3000

# Optional: Session Configuration
# SESSION_SECRET=your-session-secret
# SESSION_MAX_AGE=86400000

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100
